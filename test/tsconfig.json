{
  "compilerOptions": {
    "outDir": "../test-dist",
    "target": "es6",
    "lib": [
      "dom",
      "es7",
      "es2017"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noImplicitThis": true,
    "removeComments": true,
    "strictNullChecks": false,
    // webdriverio bug in their type files
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "../app",
    "jsx": "preserve",
    "types": [
      "node-fetch",
      "archiver",
      "classnames",
      "extract-zip",
      "fs-extra",
      "humps",
      "lodash",
      "mime",
      "mkdirp",
      "node",
      "overlayscrollbars",
      "request",
      "semver",
      "socket.io-client",
      "tapable",
      "uuid",
      "vue-tsx-support",
      "webdriverio/async"
    ]
  },
  "exclude": [
    "node_modules",
    "screentest/runner.js",
    "screentest",
    "performance/performance-test-runner.js"
  ]
}
