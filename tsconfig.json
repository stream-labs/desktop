{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "es7",
      "es2017"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "isolatedModules": false,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "removeComments": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,

    "outDir": "bundles/ts",
    "sourceMap": true,
    "sourceRoot": "/",
    "inlineSources": true,
    "allowJs": false,
    "strictNullChecks": false,
    "emitDecoratorMetadata": true,
    "baseUrl": "./app"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./app/**/*.ts"
  ]
}
